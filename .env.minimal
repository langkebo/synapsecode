# Matrix Synapse 极简版环境变量配置
# 专为单核CPU 2G内存服务器优化

# 服务器配置
MATRIX_SERVER_NAME=your-domain.com
MATRIX_DOMAIN=your-domain.com
ADMIN_EMAIL=admin@your-domain.com

# 功能开关
ENABLE_REGISTRATION=false
FRIENDS_ENABLED=true
MAX_FRIENDS_PER_USER=50

# 数据库配置
POSTGRES_USER=synapse
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=synapse

# 安全密钥 - 请使用以下命令生成
# openssl rand -base64 32
REGISTRATION_SHARED_SECRET=your_registration_secret_here
MACAROON_SECRET_KEY=your_macaroon_secret_here
FORM_SECRET=your_form_secret_here

# 统计报告
REPORT_STATS=no

# 性能优化配置
SYNAPSE_CACHE_FACTOR=0.2
SYNAPSE_EVENT_CACHE_SIZE=500

# 媒体配置
MAX_UPLOAD_SIZE=5M
LOCAL_MEDIA_RETENTION_DAYS=7
REMOTE_MEDIA_RETENTION_DAYS=3

# 速率限制配置
REGISTRATION_RATE_LIMIT=0.1
LOGIN_RATE_LIMIT=0.2
MESSAGE_RATE_LIMIT=0.5